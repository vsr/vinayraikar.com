<div class="mt-4 lg:mt-12 grid gap-8  pt-12 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12">

  {% for post in postslist | reverse %}
    <div class="hover:shadow rounded-sm p-6 bg-slate-50 flex flex-col">

      <div class="mt-6 flex items-center">
        <div class="">
          <div class="flex space-x-1 text-sm text-gray-500">
            <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
            {# <span aria-hidden="true"> &middot; </span>
                <span> 6 min read </span> #}
          </div>
        </div>
      </div>

      <a href="{{ post.url | url }}" class="block mt-4 flex-grow">
        <p class="text-xl font-semibold text-gray-900">{{post.data.title}}</p>
        <p class="mt-3 text-base text-gray-500">{% excerpt post %}</p>
      </a>

      <div class="mt-3 flex items-center">
        {% for tag in post.data.tags | filterTagList %}
          {% set tagUrl %}/posts/tags/{{ tag | slug }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="inline-block">
            <span  class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 mr-2">{{ tag }}</span>
          {% endfor %}
        </a>
      </div>

    </div>
  {% endfor %}

</div>
