---
pagination:
  data: collections.years
  size: 1
  alias: year
layout: layouts/base.njk
eleventyExcludeFromCollections: true
permalink: /posts/{{year}}/
---

<div>
  <div class="pt-16 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
    <div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
      <div class="">
        <h1 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">All posts in year {{year}}</h1>
        {# <p class="mt-3 text-xl text-gray-500 sm:mt-4">{{metadata.blogIntro}}</p> #}
      </div>

      {% for month, posts in collections.postsByYears[year] %}
        <div class="divide-y-2 divide-gray-200 my-16">
          <h2 class="mt-8">
            <a href="/posts/{{year}}/{{month}}/">{{month}}, {{year}}</a>
          </h2>
          {% set postslist = posts %}
          {% include "layouts/postslist.njk" %}
        </div>
      {% endfor %}

    </div>
  </div>
</div>
